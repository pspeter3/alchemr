%table.table.table-striped
  %thead
    %th Name
    %th URL
    %th Restricted
  %tbody
    - websites.each do |website|
      %tr
        %td= link_to h!(website.name), url(:websites, :show, :id => website.id)
        %td= link_to h!(website.url), h!(website.url)
        %td= website.restricted.to_s.capitalize
