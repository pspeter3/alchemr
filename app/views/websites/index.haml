.row
  .span12
    .page-header
      %h1 Websites
    %table.table.table-striped
      %thead
        %th Name
        %th Description
        %th URL
      %tbody
        - @websites.each do |website|
          %tr
            %td= link_to website.name, url(:websites, :show, :id => website.id)
            %td= link_to website.url, website.url
            %td= website.desc
    = link_to url(:websites, :new), :class => 'btn btn-primary' do
      %i.icon-plus-sign.icon-white
      Add Website
