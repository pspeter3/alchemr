.modal-header
  %h1= h! @survey.title
.modal-body
- form_tag url(:api, :respond, :key => @website.key), :class => 'form-horizontal' do
  - field_set_tag do
    - @survey.questions.each do |question|
      = partial 'questions/show', :locals => {:question => question}
    = partial 'api/info'
.modal-footer
  = submit_tag 'Submit', :class => 'btn btn-primary'