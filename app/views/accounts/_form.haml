- field_set_tag do
  .control-group
    = f.label :name, :caption => 'First Name', :class => 'control-label'
    .controls
      = f.text_field :name
  .control-group
    = f.label :surname, :caption => 'Last Name', :class => 'control-label'
    .controls
      = f.text_field :surname
  .control-group
    = f.label :email, :caption => 'Email Address', :class => 'control-label'
    .controls
      = f.text_field :email
  .control-group
    = f.label :password, :caption => 'Password', :class => 'control-label'
    .controls
      = f.password_field :password
  .control-group
    = f.label :password_confirmation, :caption => 'Password Confirmation', :class => 'control-label'
    .controls
      = f.password_field :password_confirmation
  .form-actions
    = f.submit 'Sign Up', :class => 'btn btn-primary'
