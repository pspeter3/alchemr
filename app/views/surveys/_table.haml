%table.table.table-striped
  %thead
    %th Name
    %th Active
    %th Max
    %th Questions
    %th Restricted
  %tbody
    - surveys.each do |survey|
      %tr
        %td= link_to h!(survey.name), url(:surveys, :show, :id => survey.id)
        %td= survey.active.to_s.capitalize
        %td= survey.max
        %td= survey.questions.size
        %td= survey.restricted.to_s.capitalize
